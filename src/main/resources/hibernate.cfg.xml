<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- JDBC connection properties -->
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/mydb
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <!-- Hibernate 6 dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Schema generation & logging -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Enable second-level cache -->
        <property name="hibernate.cache.use_second_level_cache">true</property>

        <!-- Hibernate 6: use JCache integration -->
        <property name="hibernate.cache.region.factory_class">jcache</property>

        <!-- Tell Hibernate which JCache provider to use (Ehcache JSR-107 provider) -->
        <property name="hibernate.javax.cache.provider">org.ehcache.jsr107.EhcacheCachingProvider</property>

        <!-- Ehcache config file from classpath (src/main/resources) -->
<!--        <property name="hibernate.javax.cache.uri">ehcache.xml</property>-->

        <!-- Entity mappings -->

<!--        <mapping class="com.myproj.Alien"/>-->
        <mapping class="com.myproj.StudentHQL"/>
        <!--<mapping class="com.myproj.Student"/>
        <mapping class="com.myproj.Laptop"/>-->

        <!-- Example:
        <mapping class="com.example.entity.User"/>
        -->

    </session-factory>
</hibernate-configuration>
